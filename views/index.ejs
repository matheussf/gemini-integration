<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Gemini Chatbot</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <h1>Gemini Chatbot</h1>
  <div class="chat-box">
    <% conversation.forEach(message => { %>
      <p class="<%= message.role %>">
        <strong><%= message.role.charAt(0).toUpperCase() + message.role.slice(1) %>:</strong>
        <%= message.content %>
      </p>
    <% }) %>
  </div>
  
  <form action="/" method="POST">
    <input type="text" name="user_input" placeholder="Type your message here..." required>
    <button type="submit">Send</button>
  </form>
  
  <p><a href="/reset">Reset Conversation</a></p>
</body>
</html>
